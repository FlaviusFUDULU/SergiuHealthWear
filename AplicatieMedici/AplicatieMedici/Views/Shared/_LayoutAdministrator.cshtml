<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Salariati</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Pagina pornire", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Manageri<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Vizualizare Manageri", "Index", "Manager", new { type = "View" }, null)</li>
                            <li>@Html.ActionLink("Adaugare Manageri", "Create", "Manager")</li>
                            <li>@Html.ActionLink("Stergere Manageri", "Index", "Manager", new { type = "Delete" }, null)</li>
                            <li>@Html.ActionLink("Editare Manageri", "Index", "Manager", new { type = "Edit" }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Echipe<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Vizualizare Echipe", "Index", "Echipa", new { type = "View" }, null)</li>
                            <li>@Html.ActionLink("Adaugare Echipe", "Create", "Echipa")</li>
                            <li>@Html.ActionLink("Stergere Echipe", "Index", "Echipa", new { type = "Delete" }, null)</li>
                            <li>@Html.ActionLink("Editare Echipe", "Index", "Echipa", new { type = "Edit" }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Concedii<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Aproba Concedii", "Index", "Salariat", new { type = "Calcul" }, null)</li>
                            <li>@Html.ActionLink("Calendar Concedii", "Create", "Salariat")</li>
                            <li>@Html.ActionLink("Tiparire Cereri Concedii", "Index", "Salariat", new { type = "Delete" }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Stat de Plata", "Index", "Report")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
