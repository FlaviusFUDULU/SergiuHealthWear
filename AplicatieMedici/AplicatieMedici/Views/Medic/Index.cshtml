@model IEnumerable<AplicatieSalariati.Models.Medic>

@{
    ViewBag.Title = ViewBag.Type;
}

@if (@ViewBag.Type == "Edit")
{
    <h2 style="padding-left:20px">Pacienți</h2>
}


@using (Html.BeginForm("Index", "Pacient"))
{
    <div class="input-group col-md-12" style="margin-top:20px">
        <input name="query" type="text" class="form-control" placeholder="Cauta" value="@TempData["query"]" />
        <span class="input-group-btn">
            <button class="btn btn-default search-btn" type="submit"><span class="glyphicon glyphicon-search"></span></button>
        </span>
    </div>
}
@if (@ViewBag.Message.Length > 0)
{
    <div id="message" class="alert-success"
         style="text-align:center;
                border:1px;
                border-radius: 15px;
                margin-top: 10px;
                margin-bottom: 10px;">
        <font color="#595959">
            <b>@ViewBag.Message</b>
        </font>
    </div>
}
<div class="col-md-12">
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nume)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prenume)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CNP)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nume)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenume)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNP)
                    </td>
                    <td class="text-right">
                        @if (ViewBag.Type == "Edit")
                        {
                            <a type="button" href="@Url.Action("Details", "Pacient", new { id = item.CNP})" class="btn btn-info" aria-label="Left Align">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </a>
                            <a type="button" href="@Url.Action("Edit", "Pacient", new { id = item.CNP})" class="btn btn-primary" aria-label="Left Align">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a type="button" href="@Url.Action("Delete", "Pacient", new { id = item.CNP})" class="btn btn-danger" aria-label="Left Align">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>