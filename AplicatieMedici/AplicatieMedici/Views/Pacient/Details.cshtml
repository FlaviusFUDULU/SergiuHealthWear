@model AplicatieSalariati.ViewModels.MedicAndPacientsViewModel
@{
    /**/

    ViewBag.Title = "Detalii";
}
<h2>Detalii pacient</h2>




<div class="row">

    <div class="col-sm-4">

        <div class="panel-body" style="background-color:#F4F4F4">

            <hr />
            <div class="img1" style="width:100px; height:100px; border-radius:50%; background-size: cover;
                background-repeat: no-repeat;
                background-position: center center; margin-left:20px;
                margin-bottom: 20px;
                background-image: url(../../../Uploads/@Model.Pacient.CNP\.jpeg);">
            </div>
            <p>
                <b>
                    @Html.DisplayNameFor(model => model.Pacient.CNP)
                </b>: @Html.DisplayFor(model => model.Pacient.CNP)
            </p>
            <p>
                <b>
                    @Html.DisplayNameFor(model => model.Pacient.Nume)
                </b>: @Html.DisplayFor(model => model.Pacient.Nume)
            </p>
            <p>
                <b>
                    @Html.DisplayNameFor(model => model.Pacient.Prenume)
                </b>: @Html.DisplayFor(model => model.Pacient.Prenume)
            </p>
            <p>
                <b>
                    @Html.DisplayNameFor(model => model.Pacient.Email)
                </b>:  @Html.DisplayFor(model => model.Pacient.Email)
            </p>
            <p>
                <b>
                    @Html.DisplayNameFor(model => model.Pacient.Adresa)
                </b>: @Html.DisplayFor(model => model.Pacient.Adresa)
            </p>
            <p>
                <b>
                    @Html.DisplayNameFor(model => model.Pacient.Numartelefon)
                </b>: @Html.DisplayFor(model => model.Pacient.Numartelefon)
            </p>
            <p>
                <b>
                    @Html.DisplayNameFor(model => model.Pacient.DataNasterii)
                </b>: @Html.DisplayFor(model => model.Pacient.DataNasterii)
            </p>
            <p>
                <b>Poză nouă: </b>
                <form action="/Pacient/Details?cnp=@Model.Pacient.CNP" method="post" enctype="multipart/form-data">
                    <input type="file" name="postedFile" />
                    <input type="submit" value="Upload" />
                </form>
            </p>
        </div>
    </div>
</div>
@Styles.Render("https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
@Styles.Render("~/Content/sidebar-09")
@Styles.Render("~/Content/sidebar-09/css/style.css")
@Styles.Render("~/Content/sidebar-09/css/bottstrap")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jqueryval")


